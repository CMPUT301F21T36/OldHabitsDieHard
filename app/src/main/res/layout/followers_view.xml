<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/back_profile_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTint="@color/pink"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:src="@drawable/ic_arrow_back"
        android:textSize="10sp"
        android:layout_marginLeft="5sp"
        android:textColor="@color/blue"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/following_header"
        />
    <TextView
        android:id="@+id/follower_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follower_u"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/back_profile_following"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/following_header"/>
    <TextView
        android:id="@+id/following_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/following"
        android:textSize="20sp"
        android:textColor="@color/blueLight"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/follower_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_profile_following" />
    <View
        android:id="@+id/following_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:background="@color/blueLight"
        app:layout_constraintTop_toBottomOf="@id/following_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/following_header"
        app:layout_constraintBottom_toBottomOf="parent">
        <ListView
            android:id="@+id/following_list_1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/follower_header"
        app:layout_constraintBottom_toBottomOf="parent">
        <ListView
            android:id="@+id/follower_list_1"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
